# Django Environment Variables - Copy to .env and fill in your values
# This file is safe to commit; never commit .env (it contains secrets)

# Django Settings
DJANGO_SETTINGS_MODULE=gistagum.settings

# Secret Key - Generate: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here

# Debug (true for development, false for production)
DEBUG=true

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# CSRF Trusted Origins (comma-separated)
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Database (optional - uses settings.py defaults if empty)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname
#cd C:\xampp\htdocs\OneTagumVision-DP
.\.venv\Scripts\Activate.ps1


# =============================================================================
# DigitalOcean Spaces (S3-compatible media storage for uploads)
# =============================================================================
# 1. Create a Space: DigitalOcean Control Panel > Spaces > Create Space
# 2. Create API key: DigitalOcean > API > Spaces Keys > Generate New Key
# 3. Set File Listing: Public (so uploaded images are viewable)
# 4. Add CORS in Space Settings if uploading from browser
USE_SPACES=false
AWS_ACCESS_KEY_ID=your-spaces-access-key
AWS_SECRET_ACCESS_KEY=your-spaces-secret-key
AWS_STORAGE_BUCKET_NAME=your-space-name
# Endpoint: https://<region>.digitaloceanspaces.com
AWS_S3_ENDPOINT_URL=https://sgp1.digitaloceanspaces.com
# Region must match your Space (sgp1, nyc3, ams3, etc.)
AWS_S3_REGION_NAME=sgp1
# Optional: CDN custom domain - leave empty to use endpoint directly
AWS_S3_CUSTOM_DOMAIN=
