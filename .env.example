# Example local .env file for development
# Copy this file to .env and set your local secrets.

DJANGO_SETTINGS_MODULE=gistagum.settings
DJANGO_SECRET_KEY=change-me-local-secret
DEBUG=true

ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Option A: local PostgreSQL
DATABASE_URL=postgresql://YOUR_LOCAL_DB_USER:YOUR_LOCAL_DB_PASSWORD@127.0.0.1:5432/YOUR_LOCAL_DB_NAME

# Option B: leave DATABASE_URL empty to use SQLite fallback in settings.py
# DATABASE_URL=

USE_SPACES=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_ENDPOINT_URL=https://sgp1.digitaloceanspaces.com
AWS_S3_REGION_NAME=sgp1
AWS_S3_CUSTOM_DOMAIN=

EMAIL_HOST=
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_PORT=587
EMAIL_USE_TLS=true
